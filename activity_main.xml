<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Hospital General"
        android:layout_height="40dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="51.5dp"
        android:text="Recepcion"
        android:id="@+id/btnUno"
        android:layout_margin="50dp"
        />
    <Button
        android:layout_width="276.5dp"
        android:layout_height="51.5dp"
        android:text="Urgencias"
        android:id="@+id/btnDos"
        android:layout_margin="50dp"
        />

    <Button
        android:layout_width="276.5dp"
        android:layout_height="51.5dp"
        android:text="Hospitalizacion"
        android:id="@+id/btnTres"
        android:layout_margin="50dp"
        />
   
</LinearLayout>